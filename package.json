{
  "name": "moten",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": "^20.19.0 || >=22.12.0",
    "pnpm": "^9.12.1"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "in": "pnpm i -r",
    "ui": "pnpm -F @moten/ui dev",
    "ui:build": "pnpm -F @moten/ui build",
    "clear": "rimraf --glob ./node_modules ./packages/**/node_modules ./packages/**/dist",
    "play:vue3": "pnpm -F @moten/playground-vue3 dev",
    "play:vue2": "pnpm -F @moten/playground-vue2 serve",
    "prepare": "husky",
    "lint": "pnpm -F @moten/admin lint"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "pnpm lint"
  },
  "config": {
    "commitizen": {
      "path": "cz-vinyl"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "pnpm": {
    "packageExtensions": {
      "vue-template-compiler": {
        "dependencies": {
          "vue": "^2.7.16"
        }
      },
      "vue-template-compiler@2.7.16": {
        "dependencies": {
          "vue": "^2.7.16"
        }
      }
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "cz-vinyl": "^2.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "rimraf": "^6.0.1"
  }
}
