{
  "name": "@moten/ui",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/vue3/moten.umd.cjs",
  "module": "./dist/vue3/moten.js",
  "exports": {
    ".": {
      "import": "./dist/vue3/moten.js",
      "require": "./dist/vue3/moten.umd.cjs"
    },
    "./style": {
      "import": "./dist/vue3/moten.css",
      "require": "./dist/vue3/moten.css"
    },
    "./vue2": {
      "import": "./dist/vue2/moten.js",
      "require": "./dist/vue2/moten.umd.cjs"
    },
    "./vue2/style": {
      "import": "./dist/vue2/moten.css",
      "require": "./dist/vue2/moten.css"
    }
  },
  "scripts": {
    "dev": "pnpm switch:vue3 && vue-tsc -b && vite build --watch",
    "build": "pnpm clear:dist && pnpm build:vue2 && pnpm build:vue3",
    "build:vue2": "pnpm switch:vue2 && vue-tsc -b && vite build",
    "build:vue3": "pnpm switch:vue3 && vue-tsc -b && vite build",
    "switch:vue3": "vue-demi-switch 3 vue3",
    "switch:vue2": "vue-demi-switch 2 vue2",
    "clear": "rimraf dist ./node_modules",
    "clear:dist": "rimraf dist",
    "test": "pnpm switch:vue3 && vitest",
    "coverage": "pnpm switch:vue3 && vitest run --coverage"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.34.40",
    "@tailwindcss/vite": "^4.1.12",
    "jsdom": "^26.1.0",
    "tailwindcss": "^4.1.12",
    "vue": "^3.5.18",
    "vue-demi": "^0.14.10",
    "vue2": "npm:vue@~2.6.14",
    "vue2.7": "npm:vue@~2.7.16",
    "vue3": "npm:vue@~3"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.7.2",
    "vue": "^2.0.0 || >=3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "3.2.4",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "rimraf": "^6.0.1",
    "scss": "^0.2.4",
    "typescript": "~5.8.3",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-vue2": "^2.0.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.5"
  }
}
